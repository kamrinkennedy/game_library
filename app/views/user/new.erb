<h1>Game Library Sign Up</h1>
<h2>Please Enter a Username and Password:</h2>

<% if @error %>
    <h2><%= @error %></h2>
<% end %>

<form method="POST" action = '/signup'>
    <h2>Username: </h2>
    <input type="text" name='user[username]' required> 
    <h2>Password: </h2>
    <input type="password" name='user[password]' required><br><br>
    <input type="submit" class="button" value="Submit">
</form>