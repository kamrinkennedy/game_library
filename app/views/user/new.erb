<h1>Please enter a username and password to sign up.</h1>

<% if @error %>
    <h2><%= @error %></h2>
<% end %>

<form method="POST" action = '/signup'>
    <h2>Username: </h2>
    <input type="text" name='user[username]' required> 
    <h2>Password: </h2>
    <input type="password" name='user[password]' required><br><br>
    <input type="submit" value="Submit">
</form>