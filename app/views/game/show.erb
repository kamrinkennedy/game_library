<h1><%= @game.name %></h1>
<% if @game.user != current_user %>
    <br><br><h2>This game belongs to <%= @game.user.username %></h2><br><br><br>
<% end %>

<h2>Platform: <a href='/platform/<%= @game.platform.id %>'><%= @game.platform.name %></a></h2><br>
<h2>Players: <%= @game.players %></h2>
<h2>Description:</h2>
<p><%= @game.description %></p><br><br><br><br>

<form method='GET' action='/profile'>
    <input type='submit' value='Return to Platforms'>
</form><br><br><br>

<% if @game.user == current_user %>
<form action='/game/<%= @game.id %>/edit' method='GET'>
    <input type="submit" value="Edit this Game">
</form><br><br>


<form action="/game/<%=  @game.id  %>" method="POST">
    <input type="hidden" value="DELETE"  name="_method">
    <input type="submit" value="Delete this Game">
</form>
<% end %>