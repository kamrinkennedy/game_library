<h1>Your <%= @platform.name %> Games</h1>

<form method="GET" action='/new_game'>
    <input type="hidden" value='<%= @platform.id %>' name='id'>
    <input type="submit" value="Add New Game">
</form><br><br>

<% if @platform.games == [] %>
<h2>You currently do not have any games for this platform.</h2>
<% else %>

<h2><ul>
    <% sorted = @platform.games.sort_by {|game| game.name } %>
    <% sorted.each do |game| %>
        <li><a href='/game/<%= game.id %>'><%= game.name %></a></li>
    <% end %>
</ul></h2><br><br>

<% end %>

<form action='/profile' method ="GET">
    <input type="submit" value="Return to Platforms">
</form><br>

<form action="/platform/<%=  @platform.id  %>" method="POST">
    <input type="hidden" value="DELETE"  name="_method">
    <input type="submit" value="Delete this Platform">
</form>